{
  "builds": [
    { "src": "index.html", "use": "@vercel/static" },
    { "src": "webrtc.html", "use": "@vercel/static" },
    { "src": "connected.html", "use": "@vercel/static" },

    { "src": "public/**", "use": "@vercel/static" },       // serve /public/* at the same paths
    { "src": "api/**/*.ts", "use": "@vercel/node" },       // TS functions
    { "src": "api/**/*.js", "use": "@vercel/node" }        // JS functions (offer.js etc.)
  ],
  "routes": [
    { "src": "^/$", "dest": "/index.html" },
    { "src": "^/webrtc$", "dest": "/webrtc.html" },
    { "src": "^/connected$", "dest": "/connected.html" },

    { "src": "^/api/(.*)$", "dest": "/api/$1" },           // API passthrough

    // any other non-API path should try public assets (e.g., /logo.png)
    { "src": "^(?!/api/)(.*)$", "dest": "/public/$1" }
  ]
}
